{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "outDir": "client/js",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": ["src/js/**/*"]
}
